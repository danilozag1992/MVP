<h1>total groups: <%= @groups.size %> </h1>
<table class="table">
  <thead>
  <tr>
    <th scope="col">name</th>
    <th scope="col">date</th>
  </tr>
  </thead>
  <tbody>
  <% @groups.each do |group| %>
    <tr>
      <td><%= link_to "#{group.name}", group %></td>
      <td><%= group.created_at.strftime("%Y-%m-%d").downcase %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= button_to 'add new group', new_group_path, method: :get, class: 'btn btn-primary add-new-group' %>
<h3>
  <%= link_to 'Back', current_user, method: :get %>
</h3>
