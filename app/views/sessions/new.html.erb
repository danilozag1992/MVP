<h1>Log in</h1>
<div class="row">
  <div class = "col-md-6">
    <%= form_with(url: login_path, scope: :session, local:true) do |f| %>
    <%= f.label :username %>
      <%= f.text_field :username, placeholder: "Enter your user name" %>
      <%= f.submit "Log in"%>
    <% end %>
    <p>If you are new user? <%= link_to "Sign up", root_path %></p>
  </div>
</div>