<h1>
<%= @group.name %>
</h1>
<table class="table">
  <thead>
  <tr>
    <th>Project</th>
    <th>Author</th>
  </tr>
  </thead>

  <tbody>
  <% @group.practices.each do |practice| %>
    <tr>
      <td><%= link_to practice.name, practice_path(practice) %></td>
      <td><%= User.find_by(id: practice.coach_id).username%></td>
    </tr>
  <% end %>
  </tbody>
</table>
<div>
  <%= button_to "Delete", @group, method: :delete, class: "btn btn-primary btn-lg btn-block" %>
  <%= button_to "Edit", edit_group_path(@group),method: :get, class: "btn btn-primary btn-lg btn-block" %>
  <%= button_to 'Add Practice', new_practice_path, method: :get, class: "btn btn-primary btn-lg btn-block" %>
  <%= button_to 'Back', groups_path %>
</div>

